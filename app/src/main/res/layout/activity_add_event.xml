<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".activity.AddingEventActivity"
    android:id="@+id/add_main_container">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event"
        android:layout_marginStart="@dimen/add_padding"
        android:layout_marginBottom="@dimen/add_padding"/>

    <LinearLayout
        android:id="@+id/add_name_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/add_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name"
            android:textSize="@dimen/size_text_name" />

        <TextView
            android:id="@+id/add_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="Event Name"
            android:lines="1"
            android:textSize="@dimen/size_text_name"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="7dp"
        android:src="@color/contentDividerLine" />

    <LinearLayout
        android:id="@+id/add_date_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/add_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="@dimen/size_text_name" />

        <TextView
            android:id="@+id/add_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="123"
            android:textSize="@dimen/size_text_name" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/add_toggle_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginStart="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annual"
            android:textSize="7pt"/>

        <ToggleButton
            android:id="@+id/add_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:checked="false"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/toggle_background"/>
    </RelativeLayout>

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginBottom="6dp"-->
        <!--android:layout_marginTop="7dp"-->
        <!--android:src="@color/contentDividerLine" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_category_container"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <Spinner
            android:id="@+id/add_spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/add_text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="@dimen/size_text_name"
            android:layout_margin="8dp"/>
    </RelativeLayout>

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginBottom="6dp"-->
        <!--android:layout_marginTop="7dp"-->
        <!--android:src="@color/contentDividerLine" />-->

    <RelativeLayout
        android:id="@+id/add_background_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/add_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="background"
            android:textSize="@dimen/size_text_name"/>

            <ImageView
                android:id="@+id/add_background"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/bg1"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="7dp"
        android:src="@color/contentDividerLine" />

</LinearLayout>
